---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort by date descending
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog - Boltzmann Analyser">
  <Header blogLinkHref="/blog" />

  <main class="blog-index-container">
    <a href="/" class="back-link">&larr; Back to Home</a>

    <header class="blog-index-header">
      <h1 class="blog-index-title">Research Blog</h1>
      <p class="blog-index-subtitle">Documenting findings from Lexical Complexity research across approximately 5 million files and 2,000 repositories.</p>
    </header>

    <ul class="blog-list">
      {posts.map((post) => (
        <li class="blog-list-item">
          <a href={`/blog/${post.id}`}>
            {post.data.series && post.data.seriesPart && (
              <span class="series-tag">{post.data.series} - Part {post.data.seriesPart}</span>
            )}
            <h2 class="blog-list-title">{post.data.title}</h2>
            <p class="blog-list-meta">
              {post.data.date.toLocaleDateString('en-GB', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </p>
            <p class="blog-list-excerpt">{post.data.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </main>
</BaseLayout>

<style>
  .blog-index-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    padding-top: 100px;
  }

  .blog-index-header {
    margin-bottom: 3rem;
  }

  .blog-index-title {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary, #fff);
  }

  .blog-index-subtitle {
    color: var(--text-secondary, #888);
    font-size: 1.1rem;
  }

  .blog-list {
    list-style: none;
    padding: 0;
  }

  .blog-list-item {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition: background 0.2s, border-color 0.2s;
  }

  .blog-list-item:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--accent-color, #00d4ff);
  }

  .blog-list-item a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .blog-list-title {
    font-size: 1.5rem;
    color: var(--text-primary, #fff);
    margin-bottom: 0.5rem;
  }

  .blog-list-meta {
    font-size: 0.9rem;
    color: var(--text-secondary, #888);
    margin-bottom: 0.75rem;
  }

  .blog-list-excerpt {
    color: var(--text-secondary, #aaa);
    line-height: 1.6;
  }

  .series-tag {
    display: inline-block;
    background: rgba(0, 212, 255, 0.15);
    color: var(--accent-color, #00d4ff);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: var(--accent-color, #00d4ff);
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>
